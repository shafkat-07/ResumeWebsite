# Instantiate Ubuntu 20.04
FROM ubuntu:20.04
LABEL maintainer "Shafkat Kabir <kabirmd@msu.edu>"
LABEL description="This is custom Docker Image for Shafkat Kabir's Resume"

# Update Ubuntu Software repository
RUN apt update
RUN apt -y install python3-pip
RUN apt -y install vim

# Add the Flask application and install requirements
RUN mkdir /app
COPY . /app
WORKDIR /app
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# Open ports, set environment variables, start the application.
EXPOSE 8080 
ENV PORT 8080
ENV FLASK_DEBUG=development
CMD exec python3 app.py
